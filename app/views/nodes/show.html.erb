<div class="row">
    <%= link_to "Back", organization_path(@organization), class: "btn btn-primary w-50 m-auto" %>
</div>
<div class="row">
    <h3 class="text-uppercase fs-bold m-auto text-center mt-4"><%= @node.name %></h3>
    <p class="text-center">Organization: <%= @organization.name %></p>
</div>
<div class="row justify-content-center">
    <h5 class="text-uppercase fs-bold m-auto text-center mt-4">Create child node</h5>
    <div class="col-sm-8 m-auto">
        <%= form_for(@child_node, url: organization_nodes_path(@organization), method: :post) do |f| %>
            <%= f.label :name, "Name", class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
            <%= f.hidden_field :parent_node_id, value: @node.id %>
            <%= f.submit "Save", class: "btn btn-info mt-4 d-flex m-auto w-50 justify-content-center", disable_with: 'Saving...' %>
        <% end %>
    </div>
</div>