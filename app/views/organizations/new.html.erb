<div class="row">
    <%= link_to "Back", organizations_path, class: "btn btn-primary w-50 m-auto" %>
</div>
<div class="row justify-content-center">
    <h3 class="text-uppercase fs-bold m-auto text-center mt-4">Create Organization</h3>
    <div class="m-auto">
        <%= form_for @organization do |f| %>
            <%= f.label :name, "Name", class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>

            <%= f.submit "Save", class: "btn btn-info mt-4 d-flex m-auto w-50 justify-content-center", disable_with: 'Saving...' %>
        <% end %>
    </div>
</div>